<!DOCTYPE html>
<html>
<head>
  <title>WhatsApp Group Message Scheduler</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5 p-4 bg-white shadow rounded">
    <h2 class="text-center text-success mb-4">📅 WhatsApp Group Message Scheduler</h2>

    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (groups.length > 0) { %>
      <form action="/send" method="POST" enctype="multipart/form-data">
        <div class="mb-3">
          <label class="form-label">Select Groups:</label><br>
          <% groups.forEach(group => { %>
            <div class="form-check">
              <input class="form-check-input" type="checkbox" name="groupIds" value="<%= group.id %>">
              <label class="form-check-label"><%= group.name %></label>
            </div>
          <% }); %>
        </div>

        <div class="mb-3">
          <label class="form-label">Message:</label>
          <textarea name="message" class="form-control" placeholder="Type your message..."></textarea>
        </div>

        <div class="mb-3">
          <label class="form-label">Attach Image (optional):</label>
          <input type="file" name="image" class="form-control">
        </div>

        <div class="mb-3">
          <label class="form-label">Schedule Time (optional):</label>
          <input type="datetime-local" name="scheduleTime" class="form-control">
          <small class="text-muted">Leave empty to send immediately</small>
        </div>

        <button type="submit" class="btn btn-success w-100">🚀 Send / Schedule Message</button>
      </form>
    <% } else { %>
      <div class="alert alert-warning text-center">⚠️ No groups found. Please make sure WhatsApp is connected.</div>
    <% } %>
  </div>
</body>
</html>
