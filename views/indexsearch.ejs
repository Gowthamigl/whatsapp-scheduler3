<!DOCTYPE html>
<html>
<head>
  <title>WhatsApp Group Message Scheduler</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body class="bg-light">
  <div class="container mt-5 p-4 bg-white shadow rounded">
    <h2 class="text-center text-success mb-4">üìÖ WhatsApp Group Message Scheduler</h2>

    <!-- Success / Error Messages -->
    <% if (success) { %>
      <div class="alert alert-success"><%= success %></div>
    <% } %>
    <% if (error) { %>
      <div class="alert alert-danger"><%= error %></div>
    <% } %>

    <% if (groups.length > 0) { %>
      <form action="/send" method="POST" enctype="multipart/form-data">
        
        <!-- üîç Search Box -->
        <div class="mb-3">
          <label class="form-label">Search Groups:</label>
          <input type="text" id="groupSearch" class="form-control" placeholder="Type to search groups...">
        </div>

        <!-- ‚úÖ Groups List -->
        <div class="mb-3" id="groupsList">
          <% groups.forEach(group => { %>
            <div class="form-check group-item">
              <input class="form-check-input" type="checkbox" name="groupIds" value="<%= group.id %>">
              <label class="form-check-label"><%= group.name %></label>
            </div>
          <% }); %>
        </div>

        <!-- Message Input -->
        <div class="mb-3">
          <label class="form-label">Message:</label>
          <textarea name="message" class="form-control" placeholder="Type your message..."></textarea>
        </div>

        <!-- Image Upload -->
        <div class="mb-3">
          <label class="form-label">Attach Image (optional):</label>
          <input type="file" name="image" class="form-control">
        </div>

        <!-- Schedule Time -->
        <div class="mb-3">
          <label class="form-label">Schedule Time (optional):</label>
          <input type="datetime-local" name="scheduleTime" class="form-control">
          <small class="text-muted">Leave empty to send immediately</small>
        </div>

        <button type="submit" class="btn btn-success w-100">üöÄ Send / Schedule Message</button>
      </form>

      <!-- üîπ JavaScript for Group Search -->
      <script>
        const searchInput = document.getElementById('groupSearch');
        const groupItems = document.querySelectorAll('.group-item');

        searchInput.addEventListener('input', () => {
          const filter = searchInput.value.toLowerCase();
          groupItems.forEach(item => {
            const label = item.querySelector('label').textContent.toLowerCase();
            if(label.includes(filter)){
              item.style.display = 'block';
            } else {
              item.style.display = 'none';
            }
          });
        });
      </script>

    <% } else { %>
      <div class="alert alert-warning text-center">‚ö†Ô∏è No groups found. Please make sure WhatsApp is connected.</div>
    <% } %>
  </div>
</body>
</html>
